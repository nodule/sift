{
  "name": "filter",
  "ns": "sift",
  "description": "MongoDB inspired array filtering",
  "async": true,
  "phrases": {
    "active": "Filtering array"
  },
  "dependencies": {
    "npm": {
      "sift": "latest"
    }
  },
  "ports": {
    "input": {
      "filter": {
        "title": "Filter",
        "type": "any"
      },
      "in": {
        "title": "Document",
        "type": "object",
        "async": true
      }
    },
    "output": {
      "out": {
        "title": "New Document",
        "type": "object"
      },
      "error": {
        "title": "Error",
        "type": "Error"
      }
    }
  }
}
